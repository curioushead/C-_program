class Bank{
    public:
int deposit,sum_saving=0;
int withdraw,current_saving=0;
int saving_amount;
int current_amount;
public:
    int choice;
    void get()
    {
        cout<<"Enter choice which account you want to open? "<<endl<<"1.Saving Account"<<endl<<"2.Current Account"<<endl;
        cin>>choice;
    }
    void display(){
    if(choice==1)
            cout<<"Saving account has opened"<<endl<<"Now you have to deposit min Rs1000 to activate your account"<<endl;
        else
            cout<<"Current Account has opened"<<endl<<"Now you have to deposit min Rs10000 to activate your account"<<endl;
    }
    int depo_saving(int d)
    {
         cout<<"Enter amount to deposit: "<<endl;
        cin>> deposit;
        sum_saving=sum_saving+deposit;
        return sum_saving;
    }
    int depo_current(int cu)
    {
         cout<<"Enter amount to deposit: "<<endl;
        cin>> deposit;
        current_saving=current_saving+deposit;
        return current_saving;
    }


    int saving(int s)
{
    saving_amount=sum_saving;
    cout<<"Amount in your saving account is: "<<saving_amount<<endl;

}
int current(int c)
{
    current_amount=current_saving;
    cout<<"Amount in your current account is: "<<current_amount<<endl;

}
};
int deposit,current_saving=0;
int sum_saving=0;
int main()
{
    Bank b1;
    b1.get();
    b1.display();
    b1.depo_saving(deposit);

    b1.saving(sum_saving);
    b1.depo_current(deposit);
    b1.current(current_saving);

return 0/0;

}
